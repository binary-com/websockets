{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Service Token (response)",
    "description": "A message with Service Token",
    "type": "object",
    "required": [
        "echo_req",
        "msg_type"
    ],
    "properties": {
        "service_token": {
            "title": "service_token",
            "description": "The object containing the retrieved token",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "service",
                "token"
            ],
            "properties": {
                "service": {
                    "description": "Name of the service that token is retrieved for.",
                    "type": "string",
                    "enum": [
                        "onfido"
                    ]
                },
                "token": {
                    "description": "Retrieved token for the requested service.",
                    "type": "string"
                }
            }
        },
        "echo_req": {
            "description": "Echo of the request made.",
            "type": "object"
        },
        "msg_type": {
            "description": "Action name of the request made.",
            "type": "string",
            "enum": [
                "service_token"
            ]
        },
        "req_id": {
            "description": "Optional field sent in request to map to response, present only when request contains req_id.",
            "type": "integer"
        }
    }
}
