{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "P2P Order Dispute (request)",
    "description": "Dispute a P2P order.",
    "type": "object",
    "auth_required": 1,
    "auth_scopes": [
        "payments"
    ],
    "additionalProperties": false,
    "required": [
        "p2p_order_dispute",
        "dispute_reason",
        "id"
    ],
    "properties": {
        "p2p_order_dispute": {
            "description": "Must be 1",
            "type": "integer",
            "enum": [
                1
            ]
        },
        "dispute_reason": {
            "description": "The predefined dispute reason",
            "type": "string",
            "enum": [
                "seller_not_released",
                "buyer_underpaid",
                "buyer_overpaid",
                "buyer_not_paid",
                "buyer_third_party_payment_method"
            ]
        },
        "id": {
            "description": "The unique identifier for this order.",
            "type": "string",
            "pattern": "^[0-9]+$"
        },
        "loginid": {
            "description": "[Optional] The login id of the user. If left unspecified, it defaults to the initial authorized token's login id.",
            "type": "string",
            "pattern": "^[A-Za-z]+[0-9]+$"
        },
        "passthrough": {
            "description": "[Optional] Used to pass data through the websocket, which may be retrieved via the `echo_req` output field.",
            "type": "object"
        },
        "req_id": {
            "description": "[Optional] Used to map request to response.",
            "type": "integer"
        }
    }
}
