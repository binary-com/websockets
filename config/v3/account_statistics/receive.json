{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Account Statistics (response)",
    "description": "A summary of account statistics",
    "type": "object",
    "required": [
        "echo_req",
        "msg_type"
    ],
    "properties": {
        "account_statistics": {
            "title": "account_statistics",
            "description": "Response of account statistics",
            "type": "object",
            "properties": {
                "currency": {
                    "description": "Currency of an account",
                    "type": "string"
                },
                "total_deposits": {
                    "description": "Sum of all deposits of an account",
                    "type": "number"
                },
                "total_withdrawals": {
                    "description": "Sum of all withdrawals of an account",
                    "type": "number"
                }
            }
        },
        "echo_req": {
            "description": "Echo of the request made.",
            "type": "object"
        },
        "msg_type": {
            "description": "Action name of the request made.",
            "type": "string",
            "enum": [
                "account_statistics"
            ]
        },
        "req_id": {
            "description": "Optional field sent in request to map to response, present only when request contains req_id.",
            "type": "integer"
        }
    }
}
