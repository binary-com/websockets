{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "title" : "Account Statistics Response",
   
   "required" : [
      "msg_type",
      "echo_req"
   ],
   "type" : "object",
   "description" : "A summary of account statistics",
   "properties" : {
      "msg_type" : {
         "type" : "string",
         "description" : "account_statistics"
      },
      "account_statistics" : {
         "title" : "Request details",
         "properties" : {
            "currency" : {
               "type" : "string",
               "description" : "Currency of an account"
            },
            "total_withdrawals" : {
               "description" : "Sum of all withdrawals of an account",
               "type" : "number"
            },
            "total_deposits" : {
               "description" : "Sum of all deposits of an account",
               "type" : "number"
            }
         },
         "description" : "Response of account statistics",
         "type" : "object"
      },
      "echo_req" : {
         "description" : "Echo of the request made",
         "title" : "Echo request"
      },
      "req_id" : {
         "description" : "Optional field send in request to map to response, present only when request contains req_id",
         "type" : "integer"
      }
   }
}
