{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Transfer Between Accounts Response",
  "description": "",
  "properties": {
    "transfer_between_accounts": {
      "type": "integer",
      "description": "If 1, transfer success.",
      "pattern": "^(1|0)$"
    },
    "accounts": {
      "type": "array",
      "description": "the avaiable accounts to transfer",
      "items": {
        "type": "object",
        "properties":{
          "loginid":{
            "type":"string"
          },
          "balance":{
            "type":"string"
          },
          "currency":{
            "type":"string"
          }
        }
      }
    },
    "client_to_full_name": {
      "type": "string",
      "description": "The account to client full name"
    },
    "client_to_loginid": {
      "type": "string",
      "description": "The account to client loginid"
    },
    "transaction_id": {
      "type":"integer",
      "description": "Reference id of transfer performed"
    },
    "echo_req": {
      "title": "Echo request",
      "description": "Echo of the request made",
      "required": 1
    },
    "msg_type": {
      "type": "string",
      "description": "transfer_between_accounts",
      "required": 1
    },
    "req_id": {
      "type": "integer",
      "description": "Optional field send in request to map to response, present only when request contains req_id"
    }
  }
}
