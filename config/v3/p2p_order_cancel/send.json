{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "P2P Order Cancel (request)",
    "description": "Cancel a P2P order.",
    "type": "object",
    "auth_required": 1,
    "auth_scopes": [
        "payments"
    ],
    "additionalProperties": false,
    "required": [
        "p2p_order_cancel",
        "id"
    ],
    "properties": {
        "p2p_order_cancel": {
            "description": "Must be 1",
            "type": "integer",
            "enum": [
                1
            ]
        },
        "id": {
            "description": "The unique identifier for this order.",
            "type": "string",
            "pattern": "^[0-9]+$"
        },
        "passthrough": {
            "description": "[Optional] Used to pass data through the websocket, which may be retrieved via the `echo_req` output field. Maximum size is 3500 bytes.",
            "type": "object",
            "maxSize": 3500
        },
        "req_id": {
            "description": "[Optional] Used to map request to response.",
            "type": "integer"
        }
    }
}
